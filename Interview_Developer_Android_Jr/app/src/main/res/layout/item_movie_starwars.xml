<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/background_welcome">

        <TextView
            android:id="@+id/tvTitleFilm"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Titulo :"
            android:gravity="center_vertical|left"
            />
        <TextView
            android:id="@+id/tvChapterFilm"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Episodio :"
            android:gravity="center_vertical|left"
            />
        <TextView
            android:id="@+id/tvMessageFilm"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Mensaje inicial:"
            android:gravity="top|left"
            />

        <TextView
            android:id="@+id/tvProductorFilm"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Productor:"
            android:gravity="center_vertical|left"
            />
        <TextView
            android:id="@+id/tvDateFilm"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Fecha de lanzamiento:"
            android:gravity="center_vertical|left"
            />


    </LinearLayout>
</LinearLayout>