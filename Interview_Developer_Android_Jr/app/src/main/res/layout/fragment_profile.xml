<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login_background"

    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_below="@+id/spinnerDay"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:text=" Perfil"
                    />

                <RelativeLayout
                    android:id="@+id/rlFotoProfile"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/tvProfile"
                    android:layout_width="210dp"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"

                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"

                        android:background="@drawable/shape_et"/>

                    <Button
                        android:id="@+id/btnCamera"
                        android:layout_width="match_parent"
                        android:text="Foto de perfil"
                        android:textAlignment="center"
                        android:drawableLeft="@drawable/baseline_photo_camera_24"
                        android:gravity="left|center_vertical"
                        android:textAllCaps="false"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/ivProfile"
                        />



                </RelativeLayout>


                <TextView
                    android:id="@+id/tvNameProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlFotoProfile"
                    android:text="Nombre :"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/etNameProfile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tvNameProfile"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:background="@drawable/shape_et"

                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/tvAddressProfile"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etNameProfile"
                    android:text="Direccion :"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/etAddressProfile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tvAddressProfile"
                    android:textSize="15dp"
                    android:background="@drawable/shape_et"

                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/tvNumberProfile"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/etAddressProfile"
                    android:text="Numero :"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/etNumberProfile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:singleLine="true"
                    android:layout_below="@+id/tvNumberProfile"
                    android:textSize="15dp"
                    android:layout_marginLeft="40dp"

                    android:background="@drawable/shape_et"

                    android:inputType="number"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tvEmailProfile"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etNumberProfile"
                    android:text="Email :"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/etEmailProfile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tvEmailProfile"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:background="@drawable/shape_et"

                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/btnSaveProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/etEmailProfile"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:textAllCaps="false"
                    android:text="Guardar Informacion"/>
            </RelativeLayout>



            Nombre, Dirección, Teléfono, email.
        </LinearLayout>
    </ScrollView>


</FrameLayout>